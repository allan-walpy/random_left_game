{
    "configurations": [
        {
            "name": "Linux",
            "includePath": [
                "${workspaceFolder}/src/**"
            ],
            "defines": [],
            "compilerPath": "/usr/bin/clang",
            "cStandard": "c17",
            "cppStandard": "c++20",
            "intelliSenseMode": "linux-clang-x64",
            "compilerArgs": [
                "-pedantic-errors",
                "-Wall",
                "-Wextra",
                "-Wsign-conversion",
                "-Wnon-virtual-dtor",
                "-ferror-limit=27",
                "-fdiagnostics-format=clang"
            ]
        }
    ],
    "version": 4
}
