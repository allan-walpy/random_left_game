{
	"version": "2.0.0",
	"tasks": [
        {
            "type": "shell",
            "label": "clang++/build",
            "command": "/usr/bin/clang++",
            "args": [
                "-g",
                "${workspaceFolder}/src/*.cpp",
                "-o",
                "${workspaceFolder}/out/app"
            ],
            "options": {
                "cwd": "${workspaceFolder}/out"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
/* "-std=c++17", "-stdlib=libc++", */
